# Disable directory listing
Options -Indexes

# Disable server signature
ServerSignature Off

# --- MIME Types for Images ---
AddType image/jpeg .jpeg .jpg
AddType image/png .png
AddType image/gif .gif
AddType image/webp .webp
AddType image/bmp .bmp
AddType image/tiff .tif .tiff

# Force correct MIME types for images (especially in directories with spaces)
<Files ~ "\.(jpe?g)$">
    ForceType image/jpeg
</Files>

<Files ~ "\.png$">
    ForceType image/png
</Files>

<Files ~ "\.gif$">
    ForceType image/gif
</Files>

<Files ~ "\.webp$">
    ForceType image/webp
</Files>

<Files ~ "\.bmp$">
    ForceType image/bmp
</Files>

<Files ~ "\.(tif|tiff)$">
    ForceType image/tiff
</Files>

# --- Existing Redirect Rules ---
RewriteEngine On

# --- Allow PayPal and Stripe First ---
RewriteCond %{HTTP_USER_AGENT} (PayPal|Stripe|paypal) [NC]
RewriteRule .* - [L]

# --- Allow Netlify Functions (Webhooks) ---
RewriteCond %{REQUEST_URI} ^/.netlify/functions/ [NC]
RewriteRule .* - [L]

# --- Enhanced India Blocking ---
# Block by Accept-Language header indicating major Indian languages (safer list - removed ur/pa)
RewriteCond %{HTTP:Accept-Language} (hi|bn|te|mr|ta|gu|kn|ml|or) [NC]
RewriteCond %{REQUEST_URI} !^/robots\.txt$ [NC]
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$ [NC]
RewriteCond %{REQUEST_URI} !^/.netlify/functions/ [NC]
RewriteCond %{HTTP_USER_AGENT} !(PayPal|Stripe|paypal|googlebot|bingbot|yahoo|baiduspider|facebookexternalhit|twitterbot) [NC]
RewriteRule .* - [F,L]

# Block known Indian mobile carriers user agents
RewriteCond %{HTTP_USER_AGENT} (Jio|Airtel|BSNL|Vodafone.*IN|Idea|Vi.*IN) [NC]
RewriteCond %{HTTP_USER_AGENT} !(PayPal|Stripe|paypal|googlebot|bingbot|yahoo|baiduspider|facebookexternalhit|twitterbot) [NC]
RewriteCond %{REQUEST_URI} !^/robots\.txt$ [NC]
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$ [NC]
RewriteCond %{REQUEST_URI} !^/.netlify/functions/ [NC]
RewriteRule .* - [F,L]

# Block requests with Indian rupee currency indicators
RewriteCond %{QUERY_STRING} (inr|rupee|â‚¹) [NC]
RewriteCond %{HTTP_USER_AGENT} !(PayPal|Stripe|paypal|googlebot|bingbot|yahoo|baiduspider|facebookexternalhit|twitterbot) [NC]
RewriteRule .* - [F,L]

# Block suspicious patterns common to Indian traffic (more specific)
RewriteCond %{HTTP_USER_AGENT} (\.in\b|India\sISP|Mumbai\sISP|Delhi\sISP|Indian\sNetwork) [NC]
RewriteCond %{REQUEST_URI} !^/robots\.txt$ [NC]
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$ [NC]
RewriteCond %{REQUEST_URI} !^/.netlify/functions/ [NC]
RewriteCond %{HTTP_USER_AGENT} !(PayPal|Stripe|paypal|googlebot|bingbot|yahoo|baiduspider|facebookexternalhit|twitterbot) [NC]
RewriteRule .* - [F,L]

